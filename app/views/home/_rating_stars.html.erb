<% ratings.each do |k,v| %>
  <p class="card-text mb-1 d-flex justify-content-between" style="max-width: 170px">
    <span class="rating-label"><%= k.to_s.capitalize %>: </span>
    <span class="rating">
      <% (5-v).times do |i| %>
        <%= link_to root_path, class: "rating-star-link", "data-rating": (5-i).to_s do %>
          ☆
        <% end %>
      <% end %>
      <% v.times do |i| %>
        <%= link_to root_path, class: "rating-star-link", "data-rating": (i+1).to_s do %>
          ★
        <% end %>
      <% end %>
    </span>
  </p>
<% end %>
<div class="d-flex flex-column align-items-center text-center">

  <h1 class="mt-3 font-weight-normal">Please sign up</h1>

  <div class="min-width-300">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "min-width-300") do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :profile_image, class: "sr-only" %>
        <div class="avatar-wrapper rounded-circle">
          <%= image_tag asset_path("fallback/defaultavatar.jpg"), class:"profile-pic" %>
          <div class="upload-button">
          </div>
          <%= f.file_field :profile_image, class: "file-upload" %>
        </div>
          <div class="d-flex justify-content-center height-0"><span id="plus-icon" class="text-success border-success"></span></div>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>

</div>
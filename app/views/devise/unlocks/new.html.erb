<h1 class="mt-3 font-weight-normal">Resend unlock instructions</h1>

<div class="min-width-300">
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, class: "min-width-300") do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Resend unlock instructions" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
